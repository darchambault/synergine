{% extends "::base.html.twig" %}

{% block header %}
<h1 class="profile">Profile</h1>
{% endblock header %}

{% block body %}
<form class="profile well form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
    <fieldset>
        {{ form_widget(form) }}
    </fieldset>
    <div class="form-actions">
        <button class="btn btn-primary" type="submit">{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}</button>
    </div>
</form>
{% endblock body %}
