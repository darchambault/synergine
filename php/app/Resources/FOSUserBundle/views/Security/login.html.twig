{% extends '::base.html.twig' %}

{% block header %}
<h1 class="login">Login</h1>
{% endblock header %}

{% block body %}
<form class="login well form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %}
    <div class="alert alert-error">{{ error }}</div>
    {% endif %}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <input type="text" name="username" class="input-xlarge control-group" placeholder="Username" value="{{ last_username }}">
    <input type="password" name="password" class="input-xlarge control-group" placeholder="Password">

    <div class="input-xlarge">
        <label class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> Remember me
        </label>
        <button type="submit" class="btn btn-primary input-medium">Login</button>
    </div>
</form>
{% endblock body %}


{% block footer %}
{% endblock footer %}
