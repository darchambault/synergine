{% extends "::base.html.twig" %}

{% block header %}
<h1 class="password_reset">Password Reset</h1>
{% endblock header %}

{% block body %}
<form class="password_reset well form-horizontal" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
    <fieldset>
        {{ form_widget(form) }}
    </fieldset>
    <div class="form-actions">
        <button class="btn btn-primary" type="submit">{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}</button>
    </div>
</form>
{% endblock body %}
